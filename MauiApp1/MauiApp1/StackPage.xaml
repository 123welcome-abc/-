<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.StackPage"
             Title="StackPage">
    <StackLayout Margin="20,35,20,25" Spacing="20">
        <Image Source="dotnet_bot.png" HeightRequest="200" />
        <Label Text="Hello, World!" FontSize="32" HorizontalOptions="Center" VerticalOptions="Center" />
        <Label Text="Welcome to .NET Multi-platform App UI" FontSize="18" HorizontalOptions="Center" VerticalOptions="Center" />
        <Button x:Name="CounterBtn" Text="Click me" Clicked="OnCounterClicked" />
    </StackLayout>
</ContentPage>